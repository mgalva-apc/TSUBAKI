@model TSUBAKI.Models.ViewModel.BookModel
@{
    ViewBag.Title = "Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8">
     <link href="~/css/bookingcss.css" rel="stylesheet">
</head>
<body>
    <div class="contentwrapper">
        <div class="bookingfaq">
            <p id="faqtitle">Frequently Asked Questions (FAQ)</p>
            <div class="questdrop">
                <div id="questions" class="listquest">
                    <select name="question" id="qs">
                        <div class="questitem">
                            <p>Disclaimer</p>
                        </div>
                        <div class="questitem">
                            <p>Question 1</p>
                        </div>
                        <div class="questitem">
                            <p>Question 2</p>
                        </div>
                        <div class="questitem">
                            <p>Question 3</p>
                        </div>
                    </select>
                </div>
            </div>
            <div class="responses">
                <div class="respinput">
                    <p>This will be a space for us to place a disclaimer regarding things that may happen during the booking process. This will be a default display when opening this page so that the users will immediately be able to see this.</p>
                </div>
                <div class="respinput">
                    <p>Here's where we put a response to one of the questions. The questions that are gonna be displayed here will mostly involve inquiries and details on the booking process</p>
                </div>
                <div class="respinput">
                    <p>For some clients, the entire booking process might be a little confusing and we want to make sure to accomodate these, so the team decided to integrate their own </p>
                </div>
                <div class="respinput">
                    <p>The team will expand this further in the coming days to include proper queries and responses regarding the booking process!</p>
                </div>
            </div>
        </div>
        <div class="formproper">
            <h2>Book an Appointment</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.LoginName, htmlAttributes: new { @class = 
                    "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LoginName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LoginName, "", new { @class ="text-danger" })
                        </div>
                    </div>
                    <div class="monthdaylist">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Month, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.Month, new List<SelectListItem> {
                            new SelectListItem { Text="January", Value="JAN" },
                            new SelectListItem { Text="February", Value="FEB" },
                            new SelectListItem { Text="March", Value="MAR" },
                            new SelectListItem { Text="April", Value="APR" },
                            new SelectListItem { Text="May", Value="MAY" },
                            new SelectListItem { Text="June", Value="JUN" },
                            new SelectListItem { Text="July", Value="JUL" },
                            new SelectListItem { Text="August", Value="AUG" },
                            new SelectListItem { Text="September", Value="SEP" },
                            new SelectListItem { Text="October", Value="OCT" },
                            new SelectListItem { Text="November", Value="NOV" },
                            new SelectListItem { Text="December", Value="DEC" }
                            }, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Day, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.Day, new List<SelectListItem> {
                            new SelectListItem { Text="01", Value="01" },
                            new SelectListItem { Text="02", Value="02" },
                            new SelectListItem { Text="03", Value="03" },
                            new SelectListItem { Text="04", Value="04" },
                            new SelectListItem { Text="05", Value="05" },
                            new SelectListItem { Text="06", Value="06" },
                            new SelectListItem { Text="07", Value="07" },
                            new SelectListItem { Text="08", Value="08" },
                            new SelectListItem { Text="09", Value="09" },
                            new SelectListItem { Text="10", Value="10" },
                            new SelectListItem { Text="11", Value="11" },
                            new SelectListItem { Text="12", Value="12" },
                            new SelectListItem { Text="13", Value="13" },
                            new SelectListItem { Text="14", Value="14" },
                            new SelectListItem { Text="15", Value="15" },
                            new SelectListItem { Text="16", Value="16" },
                            new SelectListItem { Text="17", Value="17" },
                            new SelectListItem { Text="18", Value="18" },
                            new SelectListItem { Text="19", Value="19" },
                            new SelectListItem { Text="20", Value="20" },
                            new SelectListItem { Text="21", Value="21" },
                            new SelectListItem { Text="22", Value="22" },
                            new SelectListItem { Text="23", Value="23" },
                            new SelectListItem { Text="24", Value="24" },
                            new SelectListItem { Text="25", Value="25" },
                            new SelectListItem { Text="26", Value="26" },
                            new SelectListItem { Text="27", Value="27" },
                            new SelectListItem { Text="28", Value="28" },
                            new SelectListItem { Text="29", Value="29" },
                            new SelectListItem { Text="30", Value="30" },
                            new SelectListItem { Text="31", Value="31" }
                            }, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TimeSlot, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.TimeSlot, new List<SelectListItem> {
                        new SelectListItem { Text="9:30 AM - 11:30 AM", Value="9:30AM - 11:30 AM" },
                        new SelectListItem { Text="11:30 AM - 1:30 PM", Value="11:30AM - 1:30PM" },
                        new SelectListItem { Text="3:30 PM - 5:30 PM", Value="3:30PM - 5:30PM" }
                        }, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Book Appointment" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
            <div>
                @Html.ActionLink("Back to Main", "Index","Home")
            </div>
        </div>
    </div>
</body>
